{
  "name": "@metaplex-foundation/amman",
  "version": "0.2.0",
  "description": "A modern mandatory toolbelt to help test solana SDK libraries and apps on a locally running validator.",
  "main": "dist/amman.js",
  "types": "dist/amman.d.ts",
  "bin": {
    "amman": "dist/cli/amman.js"
  },
  "scripts": {
    "check:publish-ready": "yarn build",
    "preversion": "yarn check:publish-ready",
    "prepublishOnly": "yarn check:publish-ready",
    "postpublish": "git push origin && git push origin --tags",
    "build": "rimraf dist && tsc -p tsconfig.json",
    "test": "tape dist/test/*.test.js",
    "lint": "prettier -c ./src/",
    "lint:fix": "prettier --format ./src",
    "doc": "rimraf ./docs && typedoc",
    "doc:update": "./sh/update-docs",
    "doctoc": "doctoc README.md"
  },
  "browser": {
    "./dist/amman.js": "./dist/amman.browser.js"
  },
  "repository": "git@github.com:metaplex-foundation/amman.git",
  "author": "Thorsten Lorenz <thlorenz@gmx.de>",
  "license": "Apache-2.0",
  "private": false,
  "directories": {
    "dist": "./dist/"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "solana",
    "blockchain",
    "test",
    "tools",
    "utilities"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "@lorisleiva/js-next-alpha": "^0.3.0",
    "@metaplex-foundation/cusper": "^0.0.2",
    "@solana/spl-token": "^0.2.0",
    "@solana/spl-token-registry": "^0.2.2405",
    "@solana/web3.js": "^1.35.0",
    "ansi-colors": "^4.1.1",
    "bn.js": "^5.2.0",
    "buffer-hexdump": "^1.0.0",
    "debug": "^4.3.3",
    "numeral": "^2.0.6",
    "port-pid": "^0.0.7",
    "socket.io": "^4.4.1",
    "socket.io-client": "^4.4.1",
    "split2": "^4.1.0",
    "text-table": "^0.2.0",
    "wait-on": "^6.0.0",
    "yargs": "^17.3.0"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/debug": "^4.1.7",
    "@types/node": "^16.11.12",
    "@types/numeral": "^2.0.2",
    "@types/split2": "^3.2.1",
    "@types/text-table": "^0.2.2",
    "@types/wait-on": "^5.3.1",
    "@types/yargs": "^17.0.7",
    "doctoc": "^2.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "supports-color": "^9.2.1",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.2"
  }
}
